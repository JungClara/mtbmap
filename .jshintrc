{
    // -------------------------------------------------------------------------
    // JSHint options file
    // Syntax is JSON-like, comments are ignored.
    // Options reference: http://www.jshint.com/docs/options/
    // -------------------------------------------------------------------------

    // environment
    "browser": true,
    "devel": true,
    "node": true,
    "predef": [
        "L",  // Leaflet library
        "jQuery",
        "MTBMAP",
        "map",
        "LANG"
    ],
    "strict": false,
    // "es3": true,

    // code style
    "bitwise": true,
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "forin": false,
    "immed": true,
    "latedef": true,
    "newcap": true,
    "noarg": true,
    "noempty": true,
    "nonew": true,
    "undef": true,
    "unused": true,
    "quotmark": "single",

    // whitespace
    "indent": 4,
    "trailing": true,
    "maxlen": 160

    // code simplicity - not enforced but nice to check from time to time
    // "maxstatements": 20,
    // "maxcomplexity": 5
    // "maxparams": 4,
    // "maxdepth": 4
}
